<div id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    Posted 
    <%= time_tag post.created_at, "data-local": "time-ago" %>
  </p>
  <p>
    or in other words
    <%= time_ago_in_words(post.created_at) %>
  </p>

  <p>
    <strong>Content:</strong>
    <%= post.content %>
  </p>

</div>
